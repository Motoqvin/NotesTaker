@using Azure.Core
@model IEnumerable<NotesTakerApp.Core.Models.Note>
@{
    ViewData["Title"] = "Notes";
}

<main role="main" class="pb-3">
    <h3 style="text-align: center; margin-top: 50px;">Welcome to Notes</h3>
    @* <form method="get" asp-controller="Notes" asp-action="Index" style="max-width: 300px; margin: 20px auto; text-align: center;">
    <input type="text" name="search" value="@Request.Query["search"]" class="form-control" placeholder="Search notes..." />
    <button type="submit" class="btn btn-outline-primary w-100 mt-2">Search</button>
    </form> *@
    <form asp-action="Create" method="post" asp-controller="Notes" style="margin-top: 20px; text-align: center;">
        <input type="text" name="Title" placeholder="New note title..." class="form-control" required style="max-width: 300px; margin: 10px auto;" />
        <button type="submit" class="btn btn-success w-100 mt-2" style="max-width: 300px; margin: 10px auto;">+ Add Note</button>
    </form>

    <h5 style="margin-bottom: 10px; color: #777; text-align: center;">ALL NOTES</h5>

    <ul class="list-unstyled" style="padding: 0; margin: 0;">
    @foreach (var note in Model)
    {
        <li style="margin-bottom: 8px; text-align: center;">
            <a href="@Url.Action("Details", "Notes", new { id = note.Id })" style="text-decoration: none; color: inherit;">
                <div style="
                    display: inline-block;
                    max-width: 300px;
                    padding: 8px 12px;
                    background-color: #fffff0;
                    border-radius: 6px;
                    box-shadow: 0 1px 2px rgba(0,0,0,0.08);
                    transition: background-color 0.2s;
                    font-size: 0.9rem;
                    text-align: left;
                ">
                    <strong style="display: block; margin-bottom: 4px;">
                        @(string.IsNullOrEmpty(note.Title) ? "Untitled" : note.Title)
                    </strong>
                    <small style="color: #888;">Created @note.CreatedAt.ToString("dd.MM.yyyy HH:mm")</small>
                </div>
            </a>
        </li>
    }
</ul>

</main>
