@{
    ViewData["Title"] = "Welcome to Notes Taker";
}

<div class="text-center mt-5">
    <h1 class="display-4">Welcome to Notes Taker 📝</h1>
    <p class="lead mt-3">
        Your personal space to capture, organize, and manage all your notes effortlessly.
    </p>

    @if (User.Identity.IsAuthenticated)
    {
        <p class="mt-4">
            <a class="btn btn-primary btn-lg" href="/Notes">Go to Notes</a>
        </p>
    }
    else
    {
        <p class="mt-4">
            <a class="btn btn-primary btn-lg" href="/Identity/Login">Login</a>
            <a class="btn btn-outline-secondary btn-lg" href="/Identity/Register">Register</a>
        </p>
    }
</div>

