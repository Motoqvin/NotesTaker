@model NotesTakerApp.Core.ViewModels.UserViewModel

@{
    ViewData["Title"] = "User Management";
}

<h1>@ViewData["Title"]</h1>

<h2>Create New User</h2>

<form class="row g-3" method="post" asp-controller="User" asp-action="Create">
    <div class="mb-3">
        <label asp-for="NewUser.UserName" class="form-label"></label>
        <input asp-for="NewUser.UserName" class="form-control" />
        <span asp-validation-for="NewUser.UserName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NewUser.Email" class="form-label"></label>
        <input asp-for="NewUser.Email" class="form-control" />
        <span asp-validation-for="NewUser.Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NewUser.PasswordHash" class="form-label"></label>
        <input asp-for="NewUser.PasswordHash" type="password" class="form-control" />
        <span asp-validation-for="NewUser.PasswordHash" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Create</button>
</form>

<hr />

<h2>All Users</h2>

@if (Model.AllUsers == null || !Model.AllUsers.Any())
{
    <p>No users found.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.AllUsers)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                </tr>
            }
        </tbody>
    </table>
}
