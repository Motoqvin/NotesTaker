@using NotesTakerApp.Core.Models
@model User

@{
    ViewData["Title"] = "Your Profile";
}

<div class="container mt-5" style="max-width: 600px;">
    <div class="card shadow rounded-3">
        <div class="card-body">
            <h4 class="card-title text-center mb-4">ðŸ‘¤ Profile Info</h4>

            <div class="mb-3">
                <label class="form-label fw-bold">Username</label>
                <div class="form-control bg-light">@Model.UserName</div>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Email</label>
                <div class="form-control bg-light">@Model.Email</div>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Roles</label>
                @if (Model.Roles != null && Model.Roles.Any())
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var role in Model.Roles)
                        {
                            <li class="list-group-item">@role</li>
                        }
                    </ul>
                }
                else
                {
                    <div class="text-muted">No roles assigned</div>
                }
            </div>

            <form asp-controller="Identity" asp-action="Logout" method="post" class="text-center mt-4">
                <button type="submit" class="btn btn-danger w-100">Logout</button>
            </form>
        </div>
    </div>
</div>
